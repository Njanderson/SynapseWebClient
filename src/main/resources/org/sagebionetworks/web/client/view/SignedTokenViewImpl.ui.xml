<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" 
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">

	<bh:Div>
		<bh:Div addStyleNames="color-line" />
		<g:SimplePanel ui:field="header" />
		<b:Container addStyleNames="min-height-500 margin-top-60">
			<!-- Confirm unsubscribe UI -->
			<bh:Div ui:field="confirmUnsubscribeUI" visible="false">
				<b:Row>
					<b:Column size="XS_12, MD_6" offset="MD_3">
						<g:SimplePanel ui:field="unsubscribeUserBadgeContainer" addStyleNames="displayInline"/>
						<b:Heading size="H5" text=", are you sure you want to stop receiving messages from Synapse?" addStyleNames="displayInline moveup-5" />
					</b:Column>
				</b:Row>
				<b:Row addStyleNames="margin-top-60">
					<b:Column size="XS_12, MD_6" offset="MD_3">
						<b:Button ui:field="confirmUnsubscribe" type="PRIMARY" text="Unsubscribe" addStyleNames="margin-left-5" pull="RIGHT"></b:Button>
						<b:Button ui:field="cancelUnsubscribe" type="DEFAULT" text="Cancel" pull="RIGHT"></b:Button>
					</b:Column>
				</b:Row>
			</bh:Div>
			<!-- Success UI -->
			<b:Row ui:field="successUI">
				<b:Column size="XS_12, MD_6" offset="MD_3">
					<bh:Div>
						<b:Alert type="SUCCESS">
							<b:Heading size="H3" ui:field="successMessage" />
						</b:Alert>
					</bh:Div>
				</b:Column>
			</b:Row>
			
			<!-- Error UI and standard ok button-->
			<b:Row>
				<b:Column size="XS_12, MD_6" offset="MD_3">
					<g:SimplePanel ui:field="synapseAlertContainer" />
				</b:Column>
			</b:Row>
			<b:Row addStyleNames="margin-top-60">
				<b:Column size="XS_12, MD_6" offset="MD_3">
					<b:Button ui:field="okButton" type="PRIMARY" text="Continue" size="LARGE" pull="RIGHT"></b:Button>
				</b:Column>
			</b:Row>
		</b:Container>
		<g:SimplePanel ui:field="footer" />
	</bh:Div>

</ui:UiBinder> 