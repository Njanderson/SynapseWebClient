<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:s="urn:import:org.sagebionetworks.web.client.widget"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bg="urn:import:org.gwtbootstrap3.client.ui.gwt" 
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">
	<bh:Div>
		<bh:Div>
			<b:FieldSet>
				<b:FormGroup>
					<b:FormLabel>Species</b:FormLabel>
					<bh:Div>
						<b:ButtonGroup dataToggle="BUTTONS">
							<b:RadioButton name="species" active="true" ui:field="humanButton">Human</b:RadioButton>
							<b:RadioButton name="species" ui:field="mouseButton">Mouse</b:RadioButton>
						</b:ButtonGroup>
					</bh:Div>	
				</b:FormGroup>
				<b:FormGroup>
					<b:FormLabel>chr</b:FormLabel>
					<b:TextBox ui:field="chrField" placeholder="1"/>
				</b:FormGroup>
				<b:FormGroup>
					<b:FormLabel>View start</b:FormLabel>
					<b:TextBox ui:field="viewStartField" placeholder=""/>
				</b:FormGroup>
				<b:FormGroup>
					<b:FormLabel>View end</b:FormLabel>
					<b:TextBox ui:field="viewEndField" placeholder=""/>
				</b:FormGroup>
			</b:FieldSet>
			<b:Panel>
				<b:PanelHeader>
		            <b:Heading size="H3" text="Tracks"/>
		        </b:PanelHeader>
		        <b:PanelBody addStyleNames="margin-bottom-5-imp">
		            <g:FlowPanel ui:field="tracksContainer"/>
		            <b:Button ui:field="addTrackButton" icon="PLUS" type="INFO" addStyleNames="margin-10">Add Track</b:Button>
		        </b:PanelBody>
			</b:Panel>
		</bh:Div>
		<bh:Text text="Powered by" /> <b:Anchor text="Biodalliance" href="http://www.biodalliance.org" target="_blank" addStyleNames="margin-left-5"/>
	</bh:Div>
</ui:UiBinder>
