<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:g="urn:import:com.google.gwt.user.client.ui" 
    xmlns:d="urn:import:com.google.gwt.dom.client"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
    xmlns:t="urn:import:org.sagebionetworks.web.client.view.bootstrap.table">
    
    <b:Modal title="Attachments" closable="true"
			fade="true" dataBackdrop="STATIC" dataKeyboard="false" b:id="attachmentsModal">
		<b:ModalBody>
			<g:FlowPanel ui:field="attachmentsPanel"></g:FlowPanel>
			<b:Heading ui:field="noAttachmentsUI" size="H3" visible="false" text="No attachments." />
			<b:Alert type="DANGER" ui:field="alert" visible="false" title="Error"/>
		</b:ModalBody>
		<b:ModalFooter>
			<b:Button ui:field="okButton" type="PRIMARY" dataDismiss="MODAL">OK</b:Button>
		</b:ModalFooter>
	</b:Modal>
</ui:UiBinder>