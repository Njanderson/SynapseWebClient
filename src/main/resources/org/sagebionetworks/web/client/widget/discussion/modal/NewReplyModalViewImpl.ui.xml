<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">
	<b:Modal ui:field="newReplyModal" title="title" closable="true" fade="true" dataBackdrop="STATIC" dataKeyboard="false">
		<b:ModalBody>
			<b:TextArea ui:field="messageMarkdown" placeholder="Message" addStyleNames="hide-resize" height="250px"/>
			<bh:Div ui:field="synAlertContainer"></bh:Div>
		</b:ModalBody>
		<b:ModalFooter>
			<b:Button ui:field="cancelButton" type="DEFAULT">Cancel</b:Button>
			<b:Button ui:field="saveButton" type="PRIMARY">Save</b:Button>
		</b:ModalFooter>
	</b:Modal>
</ui:UiBinder> 