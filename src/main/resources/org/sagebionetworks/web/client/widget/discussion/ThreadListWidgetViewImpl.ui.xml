<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:t="urn:import:org.sagebionetworks.web.client.view.bootstrap.table">
	<b:Row>
		<b:Column size="XS_12">
			<!-- Thread header -->
			<t:Table ui:field="threadHeader" width="100%">
				<t:TableRow>
					<t:TableHeader width="20px" />
					<t:TableHeader>
						<bh:Span text="Topic" />
					</t:TableHeader>
					<t:TableHeader width="310px" addStyleNames="visible-lg">
						<bh:Span text="Active Users"/>
					</t:TableHeader>
					<t:TableHeader width="70px" addStyleNames="visible-lg visible-md">
						<bh:Span text="Replies" />
					</t:TableHeader>
					<t:TableHeader width="70px" addStyleNames="visible-lg visible-md">
						<bh:Span text="Views"/>
					</t:TableHeader>
					<t:TableHeader width="120px" addStyleNames="visible-lg visible-md">
						<bh:Span text="Activity"/>
					</t:TableHeader>
				</t:TableRow>
			</t:Table>
		</b:Column>
		<bh:Div ui:field="threadListContainer"></bh:Div>
		<bh:Div ui:field="synAlertContainer"></bh:Div>
	</b:Row>
</ui:UiBinder>