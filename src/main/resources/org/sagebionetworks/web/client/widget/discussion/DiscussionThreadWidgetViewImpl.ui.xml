<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:t="urn:import:org.sagebionetworks.web.client.view.bootstrap.table">
	<bh:Div addStyleNames="padding-10 light-border-bottom overflow-x-hidden">
		<g:FocusPanel ui:field="showThread">
			<t:Table width="100%">
				<t:TableRow>
					<t:TableData>
						<bh:Span ui:field="threadTitle"></bh:Span>
					</t:TableData>
					<t:TableData width="310px" addStyleNames="visible-lg">
						<bh:Span ui:field="activeUsers"></bh:Span>
					</t:TableData>
					<t:TableData width="60px" addStyleNames="visible-lg visible-md">
						<bh:Span ui:field="numberOfReplies"></bh:Span>
					</t:TableData>
					<t:TableData width="60px" addStyleNames="visible-lg visible-md">
						<bh:Span ui:field="numberOfViews"></bh:Span>
					</t:TableData>
					<t:TableData width="130px" addStyleNames="visible-lg visible-md">
						<bh:Span ui:field="lastActivity"></bh:Span>
					</t:TableData>
				</t:TableRow>
			</t:Table>
		</g:FocusPanel>
		<b:Collapse ui:field="threadDetails" visible="false">
			<bh:Div addStyleNames="margin-top-10 light-border-bottom" width="95%" pull="RIGHT" >
				<t:Table width="100%">
					<t:TableData>
						<bh:Span ui:field="author"></bh:Span>
					</t:TableData>
					<t:TableData width="130px" addStyleNames="visible-lg visible-md">
						<bh:Span ui:field="createdOn"></bh:Span>
					</t:TableData>
				</t:Table>
				<bh:Paragraph ui:field="threadMessage"></bh:Paragraph>
				<g:FocusPanel ui:field="showReplies">
					<bh:Span ui:field="clickToViewReplies"></bh:Span>
				</g:FocusPanel>
			</bh:Div>
			<b:Collapse ui:field="replyDetails" visible="false">
				<bh:Div ui:field="replyListContainer" width="90%" pull="RIGHT" addStyleNames="margin-top-10"></bh:Div>
				<bh:Div width="90%" pull="RIGHT" addStyleNames="margin-top-10">
					<b:Button ui:field="loadMoreButton">Load more</b:Button>
				</bh:Div>
			</b:Collapse>
			<bh:Div width="95%" pull="RIGHT" addStyleNames="margin-top-10">
				<b:Button ui:field="replyButton" pull="LEFT">Reply</b:Button>
			</bh:Div>
		</b:Collapse>
	</bh:Div>
</ui:UiBinder>