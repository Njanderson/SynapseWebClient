<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:t="urn:import:org.sagebionetworks.web.client.view.bootstrap.table">
	<b:Row>
		<b:Column size="XS_12">
			<t:Table ui:field="threadHeader" width="100%">
				<t:TableRow>
					<t:TableHeader>
						<bh:Span ui:field="threadTitle"></bh:Span>
					</t:TableHeader>
					<t:TableHeader width="310px" addStyleNames="visible-lg">
						<bh:Span ui:field="activeUsers"></bh:Span>
					</t:TableHeader>
					<t:TableHeader width="70px" addStyleNames="visible-lg visible-md">
						<bh:Span ui:field="numberOfReplies"></bh:Span>
					</t:TableHeader>
					<t:TableHeader width="70px" addStyleNames="visible-lg visible-md">
						<bh:Span ui:field="numberOfViews"></bh:Span>
					</t:TableHeader>
					<t:TableHeader width="120px" addStyleNames="visible-lg visible-md">
						<bh:Span ui:field="lastActivity"></bh:Span>
					</t:TableHeader>
				</t:TableRow>
			</t:Table>
			<bh:Paragraph ui:field="threadMessage"></bh:Paragraph>
		</b:Column>
		<bh:Div ui:field="replyListContainer"></bh:Div>
	</b:Row>
</ui:UiBinder>