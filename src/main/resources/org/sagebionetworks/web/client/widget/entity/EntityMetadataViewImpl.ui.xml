<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:s="urn:import:org.sagebionetworks.web.client.widget">
 
    <ui:with field="icons" type="org.sagebionetworks.web.client.IconsImageBundle" />
    
	<g:HTMLPanel>
		<h2 style="margin-bottom: 0px;">	
			<g:HTMLPanel ui:field="entityNamePanel">			
				 <span class="liftLargeIcon">
				 	<g:Image ui:field="entityIcon" styleName="liftLargeIcon"/>
				 </span>
				 &nbsp;
				 <span ui:field="entityName"/>
				 &nbsp;
				 <g:SimplePanel ui:field="favoritePanel" addStyleNames="inline-block"/>			
			</g:HTMLPanel>
		</h2>
		<g:HTMLPanel ui:field="detailedMetadata">
		    <bh:Div>
		    	<bh:Span addStyleNames="boldText margin-right-5" text="Synapse ID:" />
		    	<g:TextBox ui:field="idField" width="85px" addStyleNames="border-none noBackground margin-right-15" readOnly="true" />
		    	<g:HTMLPanel ui:field="dataUseContainer" addStyleNames="displayInline">
		    	    <span addStyleNames="margin-right-5 boldText">Conditions for use:</span>
		    	    <g:SimplePanel ui:field="restrictionPanel"/>
		    	</g:HTMLPanel>
		    </bh:Div>
			<g:SimplePanel ui:field="doiPanel" addStyleNames="inline-block"/>
		    <b:Collapse ui:field="annotationsContent" toggle="false" b:id="annotationContentCollapse">
		    	<g:SimplePanel ui:field="annotationsContainer" addStyleNames="highlight-box margin-bottom-15"></g:SimplePanel> 
		    </b:Collapse>
		    <b:Collapse ui:field="fileHistoryContent" toggle="false" b:id="fileHistoryContentCollapse">
		    	<g:SimplePanel ui:field="fileHistoryContainer" addStyleNames="highlight-box margin-bottom-15"></g:SimplePanel> 
		    </b:Collapse>
	    </g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>
