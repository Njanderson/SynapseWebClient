<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">

	<ui:with field='sageImages' type='org.sagebionetworks.web.client.SageImageBundle' />
	<g:HTMLPanel>
		<div ui:field="headerDiv" class="notopmargin small-header margin-right-15">		    
			<div class="margin-top-3">
			    <div ui:field="headerImageDiv" class="left logo margin-top-4">
			        <a href="#!Home:0"> 
				    	<g:Image ui:field="logoLarge" resource="{sageImages.synaspseHeader}" />					
						<g:Image ui:field="logoSmall" resource="{sageImages.synapseLogoSmall}"  />
					</a>
			    </div>
			    <b:Anchor ui:field="loginLink" text="Log in" addStyleNames="right margin-5"/>
				<b:Anchor ui:field="registerLink" text="Register" addStyleNames="right margin-5"/>
				<b:Button size="EXTRA_SMALL" addStyleNames="right margin-5" ui:field="dashboardButton">My Dashboard</b:Button>
			    <b:ButtonGroup addStyleNames="right margin-5">
					<b:Button dataToggle="DROPDOWN" size="EXTRA_SMALL">Help</b:Button>
		              <b:DropDownMenu>
					    <b:AnchorListItem ui:field="gettingStartedLink" icon="BOOK">Getting started</b:AnchorListItem>
					    <b:AnchorListItem ui:field="forumLink">Forum</b:AnchorListItem>
					    <b:AnchorListItem ui:field="rLink">R client</b:AnchorListItem>
					    <b:AnchorListItem ui:field="pythonLink">Python client</b:AnchorListItem>
					    <b:AnchorListItem ui:field="commandLineLink">Command line client</b:AnchorListItem>
					    <b:AnchorListItem ui:field="restAPILink">REST API docs</b:AnchorListItem>
					  </b:DropDownMenu>
				</b:ButtonGroup>
				<b:ButtonGroup addStyleNames="right margin-5">
					<b:Button addStyleNames="padding-0-imp" dataToggle="DROPDOWN" ui:field="userButton" />
		              <b:DropDownMenu>
					    <b:AnchorListItem ui:field="usernameLink" ></b:AnchorListItem>
					    <b:Divider/>
					    <b:AnchorListItem ui:field="settingsLink" icon="WRENCH">Settings</b:AnchorListItem>
					    <b:AnchorListItem ui:field="trashLink">@ Trash can</b:AnchorListItem>
					    <b:AnchorListItem ui:field="logoutLink" icon="SIGN_OUT">Log out</b:AnchorListItem>
					  </b:DropDownMenu>
				</b:ButtonGroup>
			    <g:SimplePanel ui:field="searchBoxContainer" addStyleNames="right margin-5"/>
				<g:FlowPanel ui:field="testSitePanel" visible="false" addStyleNames="right margin-5">
			    	<bh:Span addStyleNames="smallerText">Alpha features on </bh:Span>
			    	<b:Anchor addStyleNames="smallerText displayInline" ui:field="goToStandardSite">off</b:Anchor>
			    </g:FlowPanel>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>